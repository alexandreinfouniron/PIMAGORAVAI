

@{ 
    if (IsPost && Validation.IsValid())
    {
        var db = WebMatrix.Data.Database.Open("dbBancoPIM");

        <!--Dados da Criança-->
        int idResponsavel = Request.Form["textCpf"].AsInt();
        string cpfResponsavel = Request.Form["txtCpf"];
        string nome = Request.Form["textNome"];
        DateTime dataNascimento = Request.Form["dtNascimento"].AsDateTime();
        DateTime dataMatricula = DateTime.Today;
        string sexo = Request.Form["opRadio"];
        string observacoes = Request.Form["taObs"];
        decimal idTurma = Request.Form["sTurma"].AsDecimal();
        decimal idSala = Request.Form["sSala"].AsDecimal();

        db.Execute("INSERT INTO Crianca (nome, sexo, dtNascimento, dtMatricula, observacoes, idTurma, idSala, idResponsavel) VALUES(@0, @1, @2, @3, @4, @5, @6, @7)", nome, sexo, dataNascimento, dataMatricula, observacoes, idTurma, idSala, idResponsavel);

        db.Close();


        Response.Redirect("~/Views/Responsavel/addCriancaResponsavel.cshtml?id=" + cpfResponsavel);

    }
    }
